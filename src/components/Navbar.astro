---
const links = [
  { label: 'Home', href: '/' },
  { label: 'Sobre', href: '/sobre' },
  { label: 'Apresentações', href: '/apresentações' },
];
---

<nav class="nav">
  <div class="nav__container">
    <a href="/" class="nav__brand">Croma</a>

    <input type="checkbox" id="nav-toggle" class="nav__toggle" />
    <label for="nav-toggle" class="nav__hamburger">☰</label>

    <ul class="nav__links">
      {
        links.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))
      }
    </ul>
  </div>

  <div class="nav__overlay"></div>
</nav>

<style>
  :root {
    --navbar-nav-height: 8rem;
    --navbar-bg-color: rgb(22, 22, 22);
    --navbar-logo-font-size: var(--font-size-2xl);
  }

  .nav {
    background: var(--navbar-bg-color);
    position: sticky;
    top: 0;
    z-index: 10;
    border-bottom: 1px solid rgb(15, 15, 15);
  }

  .nav__container {
    max-width: 72rem;
    margin-inline: auto;
    height: var(--navbar-nav-height);
    padding-inline: 2rem;
    
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav__brand {
    font-weight: 700;
    font-size: var(--navbar-logo-font-size);
    padding: 1rem;
  }

  .nav__links {
    display: flex;
    align-items: end;
  }

  .nav__links a {
    font-weight: 500;
    padding: 0.5rem 2rem;
    height: 100%;
  }

  .nav__toggle {
    display: none;
  }

  .nav__hamburger {
    display: none;
    font-size: 3rem;
    cursor: pointer;
    user-select: none;
    padding: 0 16px;
    transition:
      transform 0.2s ease,
      opacity 0.2s ease;
  }

  .nav__hamburger:hover {
    opacity: 0.7;
  }

  .nav__overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.25s ease;
    z-index: 5;
  }

 @media (max-width: 48rem) {
  .nav__hamburger {
    display: block;
  }

  .nav__links {
    position: absolute;
    top: var(--navbar-nav-height);
    left: 0;
    right: 0;
    background: var(--navbar-bg-color);
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: 2rem 1.5rem;
    gap: 2rem;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transform: translateY(-1rem);
    transition:
      max-height 0.35s ease,
      opacity 0.25s ease,
      transform 0.25s ease;
    border-bottom: 1px solid rgb(65, 65, 65);
    z-index: 10;
  }

  .nav__links a {
    padding: 0.3em 2;
  }

  .nav__toggle:checked + .nav__hamburger {
    transform: rotate(90deg);
  }

  .nav__toggle:checked + .nav__hamburger + .nav__links {
    max-height: 24rem;
    opacity: 1;
    transform: translateY(0);
  }

  .nav__toggle:checked ~ .nav__overlay {
    opacity: 1;
    pointer-events: auto;
  }
}

</style>
