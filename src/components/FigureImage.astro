---
interface Props {
	imgSrc: string;
	description: string;
	alt?: string;
	maxWidth?: string;
}

const {
	imgSrc,
	description,
	alt = '',
	maxWidth = '40rem',
} = Astro.props;
---

<figure class="figure-image">
	<img src={imgSrc} alt={alt} />
	<figcaption>{description}</figcaption>
</figure>

<style>
.figure-image {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
	gap: 0.5rem;
}

.figure-image img {
	width: 100%;
	max-width: var(--maxWidth);
	height: auto;
	display: block;
	object-fit: cover;
}

.figure-image figcaption {
	font-size: 0.875rem;
	opacity: 0.75;
}
</style>

<style define:vars={{ maxWidth }}>
</style>
