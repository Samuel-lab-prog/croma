---
import IconTopic from '@components/IconTopic.astro';

interface Props {
	iconSrc: string;
	label: string;
	title: string;
	paragraphs: string[];
	imageSrc: string;
	imageAlt?: string;
	ctaHref?: string;
	ctaLabel?: string;
}

const {
	iconSrc,
	label,
	title,
	paragraphs,
	imageSrc,
	imageAlt = '',
	ctaHref,
	ctaLabel = 'Ver mais',
} = Astro.props;
---

<section class="about-section">
	<div>
		<IconTopic iconSrc={iconSrc} label={label} />

		<h2>{title}</h2>

		{paragraphs.map((text) => (
			<p>{text}</p>
		))}

		{ctaHref && (
			<a href={ctaHref} class="btn btn-primary">
				{ctaLabel}
			</a>
		)}
	</div>

	<img src={imageSrc} alt={imageAlt} />
</section>
<style>
.about-section {
	display: grid;
	place-items: center;
	grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
	gap: 2rem; 
}

.about-section div {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: start;
	gap: 1rem;
}

.about-section img {
	max-width: 35rem;
	width: 100%;
	height: auto;
	object-fit: cover;
	border-radius: 0.5rem;
}